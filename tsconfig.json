{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/create/page.jsx", "app/components/QuizInfo.jsx", "app/quiz/[quizId]/page.jsx", "app/components/Timer.jsx", "app/components/Feed.jsx", "app/components/Card.jsx", "app/[user]/page.jsx", "app/components/ProfileCard.jsx", "app/page.jsx", "app/signup/page.jsx", "app/login/page.jsx"],
  "exclude": ["node_modules"]
}
